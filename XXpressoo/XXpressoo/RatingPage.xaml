<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XXpressoo.RatingPage"
             Title="Оцените приложение"
             BackgroundColor="#D2B48C"
             Padding="20">
    <StackLayout Spacing="15" VerticalOptions="Center" HorizontalOptions="Center">
        <!-- Заголовок -->
        <Label Text="Оцените наше приложение!"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

        <!-- Кнопки с числами от 1 до 5 -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="10">
            <Button x:Name="Rate1" 
                    Text="1" 
                    WidthRequest="60" 
                    HeightRequest="60" 
                    BorderRadius="30" 
                    TextColor="White"
                    BackgroundColor="#E53935"
                    Clicked="OnRateClicked"/>
            <Button x:Name="Rate2" 
                    Text="2" 
                    WidthRequest="60" 
                    HeightRequest="60" 
                    BorderRadius="30" 
                    TextColor="White"
                    BackgroundColor="#E53935"
                    Clicked="OnRateClicked"/>
            <Button x:Name="Rate3" 
                    Text="3" 
                    WidthRequest="60" 
                    HeightRequest="60" 
                    BorderRadius="30" 
                    TextColor="White"
                    BackgroundColor="#E53935"
                    Clicked="OnRateClicked"/>
            <Button x:Name="Rate4" 
                    Text="4" 
                    WidthRequest="60" 
                    HeightRequest="60" 
                    BorderRadius="30" 
                    TextColor="White"
                    BackgroundColor="#E53935"
                    Clicked="OnRateClicked"/>
            <Button x:Name="Rate5" 
                    Text="5" 
                    WidthRequest="60" 
                    HeightRequest="60" 
                    BorderRadius="30" 
                    TextColor="White"
                    BackgroundColor="#E53935"
                    Clicked="OnRateClicked"/>
        </StackLayout>

        <!-- Текст отзыва -->
        <Editor x:Name="ReviewTextEditor"
                Placeholder="Оставьте отзыв..."
                HeightRequest="100"
                Margin="0,10,0,0"/>

        <!-- Кнопка отправить -->
        <Button Text="Отправить"
                BackgroundColor="#FF6F61"
                TextColor="White"
                CornerRadius="10"
                WidthRequest="200"
                Clicked="OnSubmitClicked"/>
    </StackLayout>
</ContentPage>