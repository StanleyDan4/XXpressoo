<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XXpressoo.ProfilePage"
             BackgroundColor="#D2B48C">
    <!-- Оранжевый фон -->

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="20" Padding="20">

                <!-- Заголовок -->
                <Label Text="Личный кабинет"
                       FontSize="24"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,50,0,0"/>

                <!-- Кнопки с иконками -->
                <StackLayout Spacing="10"
                             Margin="0,50,0,0">
                    <Frame CornerRadius="10"
                           HasShadow="True"
                           Padding="10"
                           BackgroundColor="NavajoWhite"
                        HeightRequest="60">
                        <Grid ColumnDefinitions="Auto,*">
                            <Image Source="https://cdn-icons-png.flaticon.com/128/1946/1946429.png"
                                   WidthRequest="30"
                                   HeightRequest="30"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start"
                                   Margin="10,0,0,0"/>
                            <Label Grid.Column="1"
                                   Text="Мои данные"
                                   FontSize="18"
                                   TextColor="White"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start"
                                   Margin="10,0,0,0"/>
                        </Grid>
                    </Frame>

                    <Frame CornerRadius="10"
                           HasShadow="True"
                           Padding="10"
                           BackgroundColor="NavajoWhite"
                           HeightRequest="60">
                        <Grid ColumnDefinitions="Auto,*">
                            <Image Source="https://cdn-icons-png.flaticon.com/128/684/684809.png"
                                   WidthRequest="30"
                                   HeightRequest="30"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start"
                                   Margin="10,0,0,0"/>
                            <Label Grid.Column="1"
                                   Text="Город"
                                   FontSize="18"
                                   TextColor="White"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start"
                                   Margin="10,0,0,0"/>
                        </Grid>
                    </Frame>

                    <Frame CornerRadius="10"
                           HasShadow="True"
                           Padding="10"
                           BackgroundColor="NavajoWhite"
                           HeightRequest="60">
                        <Grid ColumnDefinitions="Auto,*">
                            <Image Source="https://cdn-icons-png.flaticon.com/128/3239/3239952.png"
                                   WidthRequest="30"
                                   HeightRequest="30"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start"
                                   Margin="10,0,0,0"/>
                            <Label Grid.Column="1"
                                   Text="Уведомления"
                                   FontSize="18"
                                   TextColor="White"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start"
                                   Margin="10,0,0,0"/>
                        </Grid>
                    </Frame>

                    <Frame CornerRadius="10"
                           HasShadow="True"
                           Padding="10"
                           BackgroundColor="NavajoWhite"
                           HeightRequest="60">
                        <Grid ColumnDefinitions="Auto,*">
                            <Image Source="https://cdn-icons-png.flaticon.com/128/126/126482.png"
                                   WidthRequest="30"
                                   HeightRequest="30"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start"
                                   Margin="10,0,0,0"/>
                            <Label Grid.Column="1"
                                   Text="Оценить приложение"
                                   FontSize="18"
                                   TextColor="White"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start"
                                   Margin="10,0,0,0"/>
                        </Grid>
                    </Frame>
                </StackLayout>

                <!-- Пространство между контентом и нижней панелью -->
                <BoxView HeightRequest="40" />

                <!-- Нижняя панель с иконками -->
                <Frame Grid.Row="1"
                       
       BackgroundColor="AntiqueWhite"
       HasShadow="True"
       CornerRadius="10"
       HeightRequest="70"
       VerticalOptions="End"
       HorizontalOptions="FillAndExpand"
       Margin="0,40,0,0"
       Padding="0"
       BorderColor="#EEE">

                    <StackLayout Grid.Row="1"
             Orientation="Horizontal"
             Spacing="0"
             BackgroundColor="Transparent"
             VerticalOptions="End"
             HorizontalOptions="FillAndExpand"
             Padding="0"
             Margin="0,0,0,5">

                    <!-- Иконка "Главная" -->
                    <ImageButton Source="https://cdn-icons-png.flaticon.com/128/7133/7133312.png"
                  WidthRequest="50"
                  HeightRequest="50"
                  HorizontalOptions="CenterAndExpand"
                  VerticalOptions="Center"
                  BackgroundColor="Transparent"
                  Clicked="OnHomeClicked"/>

                    <!-- Иконка "Меню" -->
                    <ImageButton Source="https://cdn-icons-png.flaticon.com/128/747/747327.png"
                  WidthRequest="40"
                  HeightRequest="40"
                  HorizontalOptions="CenterAndExpand"
                  VerticalOptions="Center"
                  BackgroundColor="Transparent"
                  Clicked="OnMenuClicked"/>

                    <!-- Иконка "Заказ" (центральная) -->
                    <ImageButton Source="https://cdn-icons-png.flaticon.com/128/1008/1008010.png"
                  WidthRequest="60"
                  HeightRequest="60"
                  HorizontalOptions="CenterAndExpand"
                  VerticalOptions="Center"
                  BackgroundColor="#E53935"
                  CornerRadius="15"
                  Margin="0,-10,0,0"
                 Padding="10"
                  Clicked="OnOrderClicked"/>

                    <!-- Иконка "Профиль" -->
                    <ImageButton Source="https://cdn-icons-png.flaticon.com/128/1144/1144760.png"
                  WidthRequest="40"
                  HeightRequest="40"
                  HorizontalOptions="CenterAndExpand"
                  VerticalOptions="Center"
                  BackgroundColor="Transparent"
                  Clicked="OnProfileClicked"/>

                    <!-- Иконка "Корзина" -->
                    <ImageButton Source="https://cdn-icons-png.flaticon.com/128/711/711897.png"
                  WidthRequest="40"
                  HeightRequest="40"
                  HorizontalOptions="CenterAndExpand"
                  VerticalOptions="Center"
                  BackgroundColor="Transparent"
                  Clicked="OnCartClicked"/>
            </StackLayout>
            </Frame>
            </StackLayout>
                
        </ScrollView>
    </ContentPage.Content>
</ContentPage>